				</Action>
			</EventHandler>
		</EventBinding>
		
		<!-- Copy file or directory on side B to A />-->
		<EventBinding id="contentUser.btnCopyB.Click">
			<Source contentRefId="contentUser" widgetRefId="btnCopyB" xsi:type="widgets.brease.Button.Event" event="Click" />
