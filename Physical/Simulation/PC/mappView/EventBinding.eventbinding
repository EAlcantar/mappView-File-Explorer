					</Target>
				</Action>
			</EventHandler>
		</EventBinding>
		
		<!-- Copy all files on side B to A />-->
		<EventBinding id="contentUser.btnCopyAllB.Click">
			<Source contentRefId="contentUser" widgetRefId="btnCopyAllB" xsi:type="widgets.brease.Button.Event" event="Click" />
