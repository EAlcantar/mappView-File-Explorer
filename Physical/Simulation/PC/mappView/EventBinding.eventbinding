						<Method xsi:type="opcUa.NodeAction.SetValueBool" value="true" />
					</Target>
				</Action>
			</EventHandler>
		</EventBinding>
		
		<!-- Create new folder on side A />-->
		<EventBinding id="contentUser.btnDirCreateA.Click">
			<Source contentRefId="contentUser" widgetRefId="btnDirCreateA" xsi:type="widgets.brease.Button.Event" event="Click" />
			<EventHandler>
				<Action>
					<Target xsi:type="opcUa.NodeAction" refId="::AsGlobalPV:EXPL.CMD[0].dir_create" >
						<Method xsi:type="opcUa.NodeAction.SetValueBool" value="true" />
					</Target>
				</Action>
			</EventHandler>
		</EventBinding>

		<!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// />-->
		
		<!-- Directory change with double click on table />-->
