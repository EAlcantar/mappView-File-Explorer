		<EventBinding id="contentUser.btnDeleteB.Click">
			<Source contentRefId="contentUser" widgetRefId="btnDeleteB" xsi:type="widgets.brease.Button.Event" event="Click" />
			<EventHandler>
				<Action>
					<Target xsi:type="opcUa.NodeAction" refId="::AsGlobalPV:EXPL.CMD[1].delete" >
						<Method xsi:type="opcUa.NodeAction.SetValueBool" value="true" />
